import socket
import threading

HOST = '127.0.0.1'
PORT = 5050

client = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
client.connect((HOST, PORT))

# --- Fungsi menerima pesan dari server ---
def terima():
    while True:
        try:
            pesan = client.recv(1024).decode()
            print("\n[Pesan] " + pesan)
        except:
            print("Terputus dari server")
            client.close()
            break

# --- Fungsi mengirim pesan ---
def kirim():
    while True:
        pesan = input("")
        client.send(pesan.encode())

# Thread menerima
thread_terima = threading.Thread(target=terima)
thread_terima.daemon = True
thread_terima.start()

# Thread mengirim
kirim()
