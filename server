import socket

HOST = '0.0.0.0'   # bisa menerima koneksi dari semua alamat
PORT = 5050        # port server

server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
server_socket.bind((HOST, PORT))
server_socket.listen(1)

print(f"Server berjalan di port {PORT}, menunggu koneksi...")

while True:
    conn, addr = server_socket.accept()
    print(f"Terhubung dengan client: {addr}")

    data = conn.recv(1024).decode()
    print("Pesan dari client:", data)

    conn.sendall(data.encode())   # echo balik
    conn.close()
